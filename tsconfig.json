{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@api/*":["src/api/*"],
      "@utils/*":["src/utils/*"],
      "@stores/*":["src/stores/*"],
      "@plugin/*":["src/plugin/*"],
      "@models/*":["src/components/*"],
      "@directive/*":["src/directive/*"],
      "@admin/*": ["package/admin/*"],
      "@apps/*": ["package/apps/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue","package/**/*.ts", "package/**/*.tsx", "package/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
